<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nof.airsoft.RegistroActivity"
    android:background="@color/colorFundo"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="70dp"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icone" />

    <EditText
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_height="45dp"
        android:background="@drawable/input_background"
        android:layout_width="match_parent"
        android:hint="Email"
        android:id="@+id/editText_email"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:id="@+id/editText_senha"
        android:background="@drawable/input_background"
        android:hint="Senha"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRecuperar"
        android:text="Esqueci minha senha"
        android:textColor="@color/colorSecundaria"
        android:layout_gravity="right"
        android:onClick="callReset"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/buttonSignin"
        android:layout_gravity="center"
        android:text="Entrar"
        android:textColor="@color/colorSecundaria"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_background"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/colorPrimaria"
        android:layout_weight="0.01" />

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorSecundaria"
        android:text="Ainda nÃ£o possui registro? Clique aqui!"
        android:id="@+id/textView_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
