<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nof.airsoft.RegistroActivity"
    android:background="@color/colorFundo">


    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registre o nome da sua equipe e adiante preencha os dados"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/colorSelect"/>

    <EditText
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_height="45dp"
        android:background="@drawable/input_background"
        android:layout_width="match_parent"
        android:hint="Nome"
        android:id="@+id/editText_nome" />

    <Button
        android:background="@drawable/input_background"
        android:backgroundTint="@color/colorPrimaria"
        android:textColor="@color/colorSecundaria"
        android:layout_marginTop="40dp"
        android:id="@+id/registrarEquipe"
        android:layout_gravity="center"
        android:text="Registrar"
        android:layout_width="160dp"
        android:layout_height="50dp" />


</LinearLayout>
